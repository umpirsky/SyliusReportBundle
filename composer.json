{
    "name": "sylius/report-bundle",
    "type": "symfony-bundle",
    "description": "Easy data reports for ecommerce applications.",
    "keywords": ["shop", "ecommerce", "reports", "report", "chart", "sales", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "email": "pjedrzejewski@diweb.pl",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/SyliusReportBundle/contributors"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.3",

        "sylius/resource-bundle":   "0.3.*",
        "symfony/framework-bundle": "~2.3"
    },
    "require-dev": {
        "doctrine/orm":     "~2.3",
        "phpspec/phpspec":  "2.0.*@dev",
        "symfony/form":     "~2.3",
        "twig/twig":        "*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Sylius\\Bundle\\ReportBundle": "" }
    },
    "target-dir": "Sylius/Bundle/ReportBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
