<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.report.class">Sylius\Bundle\ReportBundle\Report\Report</parameter>

        <parameter key="sylius.report_renderer.console.class">Sylius\Bundle\ReportBundle\Renderer\ConsoleRenderer</parameter>
        <parameter key="sylius.report_renderer.csv.class">Sylius\Bundle\ReportBundle\Renderer\CsvRenderer</parameter>

        <parameter key="sylius.form.type.report.class">Sylius\Bundle\ReportBundle\Form\Type\ReportType</parameter>
        <parameter key="sylius.form.type.report_data_fetcher.class">Sylius\Bundle\ReportBundle\Form\Type\DataFetcherType</parameter>
        <parameter key="sylius.form.type.report_renderer.class">Sylius\Bundle\ReportBundle\Form\Type\RendererType</parameter>
        <parameter key="sylius.form.type.report_data_fetcher_choice.class">Sylius\Bundle\ReportBundle\Form\Type\DataFetcherChoiceType</parameter>
        <parameter key="sylius.form.type.report_renderer_choice.class">Sylius\Bundle\ReportBundle\Form\Type\RendererChoiceType</parameter>
        <parameter key="sylius.form.type.report_renderer.console_configuration.class">Sylius\Bundle\ReportBundle\Form\Type\Renderer\ConsoleConfigurationType</parameter>
        <parameter key="sylius.form.type.report_renderer.csv_configuration.class">Sylius\Bundle\ReportBundle\Form\Type\Renderer\CsvConfigurationType</parameter>

        <parameter key="sylius.registry.report_data_fetcher.class">Sylius\Bundle\ReportBundle\DataFetcher\Registry\DataFetcherRegistry</parameter>
        <parameter key="sylius.registry.report_renderer.class">Sylius\Bundle\ReportBundle\Renderer\Registry\RendererRegistry</parameter>

        <parameter key="sylius.rest.csv_handler.class">Sylius\Bundle\ReportBundle\Rest\Handler\CsvHandler</parameter>
    </parameters>

    <services>
        <service id="sylius.controller.report" class="%sylius.controller.report.class%">
            <argument>sylius</argument>
            <argument>report</argument>
            <argument>SyliusReportBundle:Report</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="sylius.report" class="%sylius.report.class%">
            <argument type="service" id="sylius.registry.report_data_fetcher" />
            <argument type="service" id="sylius.registry.report_renderer" />
        </service>

<!--
         <service id="sylius.report_renderer.console" class="%sylius.report_renderer.console.class%">
            <argument type="service">
                <service class="Symfony\Component\Console\Helper\TableHelper" />
            </argument>
            <argument type="service">
                <service class="Symfony\Component\Console\Output\ConsoleOutput" />
            </argument>
            <tag name="sylius.report_renderer" type="console" label="Console" />
        </service>
-->

        <service id="sylius.report_renderer.csv" class="%sylius.report_renderer.csv.class%">
            <tag name="sylius.report_renderer" type="csv" label="CSV" />
        </service>

        <service id="sylius.registry.report_data_fetcher" class="%sylius.registry.report_data_fetcher.class%" />
        <service id="sylius.registry.report_renderer" class="%sylius.registry.report_renderer.class%" />

        <service id="sylius.form.type.report" class="%sylius.form.type.report.class%">
            <argument>%sylius.model.report.class%</argument>
            <argument type="service" id="sylius.registry.report_data_fetcher" />
            <argument type="service" id="sylius.registry.report_renderer" />
            <tag name="form.type" alias="sylius_report" />
        </service>
        <service id="sylius.form.type.report_data_fetcher" class="%sylius.form.type.report_data_fetcher.class%">
            <argument>%sylius.model.report_data_fetcher.class%</argument>
            <argument type="service" id="sylius.registry.report_data_fetcher" />
            <tag name="form.type" alias="sylius_report_data_fetcher" />
        </service>
        <service id="sylius.form.type.report_renderer" class="%sylius.form.type.report_renderer.class%">
            <argument>%sylius.model.report_renderer.class%</argument>
            <argument type="service" id="sylius.registry.report_renderer" />
            <tag name="form.type" alias="sylius_report_renderer" />
        </service>
        <service id="sylius.form.type.report_data_fetcher_choice" class="%sylius.form.type.report_data_fetcher_choice.class%">
            <argument>%sylius.report_data_fetchers%</argument>
            <tag name="form.type" alias="sylius_report_data_fetcher_choice" />
        </service>
        <service id="sylius.form.type.report_renderer_choice" class="%sylius.form.type.report_renderer_choice.class%">
            <argument>%sylius.report_renderers%</argument>
            <tag name="form.type" alias="sylius_report_renderer_choice" />
        </service>
        <service id="sylius.form.type.report_renderer.console_configuration" class="%sylius.form.type.report_renderer.console_configuration.class%">
            <tag name="form.type" alias="sylius_report_renderer_console_configuration" />
        </service>
        <service id="sylius.form.type.report_renderer.csv_configuration" class="%sylius.form.type.report_renderer.csv_configuration.class%">
            <tag name="form.type" alias="sylius_report_renderer_csv_configuration" />
        </service>

        <service id="sylius.rest.csv_handler" class="%sylius.rest.csv_handler.class%" />
        <service id="sylius.rest.view_handler" parent="fos_rest.view_handler.default">
            <call method="registerHandler">
                <argument>csv</argument>
                <argument type="collection">
                    <argument type="service" id="sylius.rest.csv_handler" />
                    <argument>createResponse</argument>
                </argument>
            </call>
        </service>
    </services>

</container>
